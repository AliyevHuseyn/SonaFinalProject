@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<link href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" rel="stylesheet" />


<div class="container" style="display:flex; justify-content:space-between; align-items:center">

    <div>
        <h1>Index <strong>Users</strong></h1>
    </div>
    <div>
        <a asp-action="create" asp-controller="adminCreate" class="btn btn-success"><i class="fa-solid fa-plus"></i>Create Admin!</a>
    </div>

</div>

<div class="container" style="margin-top:5px">
    <table class="table" id="index">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Profile Photo</th>
                <th scope="col">User Name</th>
                <th scope="col">User Email</th>
                <th scope="col">Full Name</th>
                <th scope="col">Role</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td>
                        <img src="~/uploads/profilPhotos/@user.ProfilPhotoUrl" width="150" height="100">
                    </td>
                    <td> @user.UserName</td>
                    <td> @user.Email</td>
                    <td> @user.FullName</td>
                    <td> @user.roleName</td>
                    <td>
                        @if (user.roleName != "SuperAdmin")
                        {
                            <a asp-action="delete" asp-controller="adminCreate" asp-route-id="@user.Id" type="button" class="btn btn-danger item-delete-btn"><i class="fa-solid fa-trash"></i>Delete!</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


