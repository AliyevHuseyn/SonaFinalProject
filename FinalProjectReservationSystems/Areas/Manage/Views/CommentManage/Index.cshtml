@model List<Comment>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<link href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="container" style="display:flex; justify-content:space-between; align-items:center">
    <div>
        <h1>Index <strong>Message</strong></h1>
    </div>
</div>

<div class="container" style="margin-top:5px">
    <table class="table" id="index">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Client Full Name</th>
                <th scope="col">Client Comment</th>
                <th scope="col">Client Profil Photo</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td> @comment.Fullname </td>
                    <td> @comment.Text </td>
                    <td> 
                        <img src="~/uploads/profilPhotos/@comment.ProfilPhoto" width="150" height="100">
                    </td>
                    <td>
                        <a asp-action="details" asp-controller="commentManage" asp-route-id="@comment.Id" type="button" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i>Detail!</a>
                        <a asp-action="delete" asp-controller="commentManage" asp-route-id="@comment.Id" type="button" class="btn btn-danger item-delete-btn"><i class="fa-solid fa-trash"></i>Delete!</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
