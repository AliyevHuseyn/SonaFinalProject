@model List<ContactUsMessage>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<link href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="container" style="display:flex; justify-content:space-between; align-items:center">
    <div>
        <h1>Index <strong>Message</strong></h1>
    </div>
</div>

<div class="container" style="margin-top:5px">
    <table class="table" id="index">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Client Full Name</th>
                <th scope="col">Client Email Address</th>
                <th scope="col">Client Email Subject</th>
                <th scope="col">Seen</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var message in Model)
            {
                count++;
                <tr>
                    <th scope="row">@count</th>
                    <td> @message.ClientFullName </td>
                    <td> @message.ClientEmail </td>
                    <td> @message.ClientMessageSubject </td>
                    <td> 
                        @if(message.Seen == true)
                        {
                            <span class="badge bg-success text-white">Seen</span>
                        }else
                        {
                            <span class="badge bg-warning text-dark">Not Seen</span>

                        }
                    </td>
                    <td>
                        @if (message.Status == false)
                        {
                            <span class="badge bg-warning text-dark">Pending</span>
                        }
                        else
                        {
                            <span class="badge bg-success text-white">Sent</span>
                        }
                    </td>
                    <td>
                        <a asp-action="details" asp-controller="contactManage" asp-route-id="@message.Id" type="button" class="btn btn-primary"><i class="fa-solid fa-circle-info"></i>Detail!</a>
                        <a asp-action="delete" asp-controller="contactManage" asp-route-id="@message.Id" type="button" class="btn btn-danger item-delete-btn"><i class="fa-solid fa-trash"></i>Delete!</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
