@model ReplyViewModel
@{
    ViewData["Title"] = "SendMessage";
}
<form method="post" asp-action="sendMessage">

    <div class="container-fluid">
        <div class="row">
            <div class="form-group col-lg-6">
                <label asp-for="Subject">Email Subject</label>
                <input asp-for="Subject" class="form-control" placeholder="Enter Email Subject">
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-6">
                <label asp-for="MessageText">Email Text</label>
                <input asp-for="MessageText" class="form-control" placeholder="Enter Email Text">
                <span asp-validation-for="MessageText" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container-fluid d-flex justify-content-center mt-5">
        <button type="submit" class="btn btn-warning"><i class="fa-solid fa-paper-plane-top"></i>Send!</button>
    </div>

</form>

