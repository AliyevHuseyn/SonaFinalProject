@model List<Order>
@{
    ViewData["Title"] = "İndex";
    int count = 0;
}

<link href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" rel="stylesheet" />

<div class="container" style="display:flex; justify-content:space-between; align-items:center">
    <div>
        <h1>Banned <strong>Order</strong></h1>
    </div>
</div>
    <div class="container" style="margin-top:5px">
        <table class="table" id="index">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Client Email</th>
                    <th scope="col">CheckIn Date</th>
                    <th scope="col">CheckOut Date</th>
                    <th scope="col">Person</th>
                    <th scope="col">Total Price</th>
                    <th scope="col">Room Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    count++;
                    <tr>
                        <th scope="row">@count</th>
                        <td> @order.UserMail </td>
                        <td> @order.CheckIn.ToString("dd MMMM yyyy") </td>
                        <td> @order.CheckOut.ToString("dd MMMM yyyy") </td>
                        <td> @order.Person </td>
                        <td> @order.TotalPrice </td>
                        <td> @order.Room.Name </td>
                        <td>
                            <a asp-action="send" asp-controller="orderEvaluation" asp-route-id="@order.Id" type="button" class="btn btn-warning"><i class="fa-solid fa-paper-plane-top"></i>Send !</a>
                        <a asp-action="bannedOrder" asp-controller="orderEvaluation" asp-route-id="@order.Id" type="button" class="btn btn-info"><i class="fa-solid fa-scale-balanced"></i>Remove Ban!</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>