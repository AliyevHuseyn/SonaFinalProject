@model Slider
@{
    ViewData["Title"] = "Update";
}

<h1>Update a slider:</h1>

<form method="post" enctype="multipart/form-data" asp-action="update" asp-controller="slider">
    <div class="container-fluid">
        <div class="row">
            <div class="form-group col-5">
                <label asp-for="ImageFile">Slider ImageFile:</label>
                <input asp-for="ImageFile" class="form-control" placeholder="Enter ImageFile">
                <img class="mt-2" src="~/uploads/sliders/@Model.ImageUrl" width="240" height="160">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
        </div>
    </div>
    <div class="container-fluid d-flex justify-content-center mt-5">
        <button type="submit" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i>Submit!</button>
    </div>
</form>

