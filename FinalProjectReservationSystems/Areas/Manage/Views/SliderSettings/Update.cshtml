@model SliderSetting

@{
    ViewData["Title"] = "Update";
}


<form method="post">

    <div class="container-fluid">
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter Title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="Description">Description</label>
                <input asp-for="Description" class="form-control" placeholder="Enter Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-6">
                <label asp-for="ButtonText">ButtonText</label>
                <input asp-for="ButtonText" class="form-control" placeholder="Enter Button Text">
                <span asp-validation-for="ButtonText" class="text-danger"></span>
            </div>
            <div class="form-group col-6">
                <label asp-for="ButtonUrl">ButtonUrl</label>
                <input asp-for="ButtonUrl" class="form-control" placeholder="Enter Button Url">
                <span asp-validation-for="ButtonUrl" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="container-fluid d-flex justify-content-center mt-5">
        <button type="submit" class="btn btn-success"><i class="fa-solid fa-plus"></i>Submit!</button>
    </div>
</form>