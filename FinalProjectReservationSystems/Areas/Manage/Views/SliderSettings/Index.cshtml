@model SliderSetting
@{
    ViewData["Title"] = "Index";
}

<link href="https://cdn.datatables.net/1.13.2/css/jquery.dataTables.min.css" rel="stylesheet" />


<div class="container" style="display:flex; justify-content:space-between; align-items:center">

    <div>
        <h1>Index <strong>Slider Setting</strong></h1>
    </div>
    <div>
    </div>

</div>

<div class="container" style="margin-top:5px">
    <table class="table" id="index">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Button Text</th>
                <th scope="col">Button Url</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
                <tr>
                    <td>@Model.Title</td>
                    <td>@Model.Description</td>
                    <td>@Model.ButtonText</td>
                    <td>@Model.ButtonUrl</td>
                    <td>
                    <a asp-action="update" asp-controller="sliderSettings" asp-route-id="@Model.Id" type="button" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i>Update!</a>
                    </td>
                </tr>
        </tbody>
    </table>
</div>


