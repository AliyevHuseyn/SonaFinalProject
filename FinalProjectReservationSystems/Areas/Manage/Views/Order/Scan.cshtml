@{
    ViewData["Title"] = "Scan";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://rawgit.com/schmich/instascan-builds/master/instascan.min.js"></script>
</head>
<body>
    <div class="d-flex justify-content-center">
        <video id="preview" style="width: 500px;height: 500px;"></video>
        <br>
        <select id="cameras" hidden></select>
    </div>

    <div class="d-flex justify-content-center">
        <form method="post">
            <label for="qrCode">Scanned/Written QR Code Value:</label>
            <input type="text" id="qrCode" name="qrCode" />
            <button class="btn btn-warning" type="submit">Check!</button>
        </form>
    </div>
    <script src="~/additional/js/QRCodeScan.js"></script>
    <script src="~/assets/js/jquery-3.3.1.min.js"></script>
</body>
</html>




<script>
    const QRCodeInput = document.getElementById("qrCode");
    // QR Code skan olanda, value form'a dusur
    function onQRScan(value) {
        QRCodeInput.value = value;
    }
</script>

