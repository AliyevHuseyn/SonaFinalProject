@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = null;
}


<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/account/css/style.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/img/sona-icon.png">


</head>
<body class="img js-fullheight" style="background-image: url(../account/images/bg.jpg);">
    <div class="container-fluid">
        <div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
            <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
                <div class=" rounded bg-dark rounded p-4 p-sm-5 my-4 mx-3">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <h3 style="color:white;">Forgot Your Password ?</h3>
                    </div>
                    <form class="signin-form" method="post">

                        <div class="form-group">
                            <input asp-for="NewPassword" class="form-control" placeholder="Please Enter Your New Password">
                            <span asp-validation-for="NewPassword" class="text-danger bg-white"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Please Enter Your New Password Again">
                            <span asp-validation-for="ConfirmPassword" class="text-danger bg-white"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="form-control btn btn-primary submit px-3">Change!</button>
                        </div>
                    </form>
                    <hr>
                    <p style="color:white;" class=" w-100 text-center">&mdash; Or Continue With &mdash;</p>
                    <div class="text-center">
                        <a class="small" asp-action="register" asp-controller="account">Create an Account!</a>
                    </div>
                    <div class="text-center">
                        <a class="small" asp-action="login" asp-controller="account">Already have an account? Login!</a>
                    </div>
                    <hr>
                </div>
            </div>
        </div>
    </div>

    <script src="~/account/js/jquery.min.js"></script>
    <script src="~/account/js/popper.js"></script>
    <script src="~/account/js/bootstrap.min.js"></script>
    <script src="~/account/js/main.js"></script>

</body>
</html>



